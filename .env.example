# Servidor
PORT=3000
HOST=0.0.0.0
NODE_ENV=production
# Use uma string longa e aleatória (ex: openssl rand -hex 32)
SESSION_SECRET=altere_para_uma_chave_longa_e_secreta

# Banco MySQL (obrigatório)
# Na Hostinger use localhost; localmente 127.0.0.1 ou localhost
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=seu_usuario_mysql
DB_PASSWORD=sua_senha_mysql
DB_NAME=nome_do_banco

# Opcional: alguns provedores usam URL única
# DATABASE_URL=mysql://usuario:senha@host:3306/nome_do_banco

# Opcional: URL pública do site
APP_URL=https://vemnoquiz.com.br
