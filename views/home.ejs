<%- include('partials/header') %>
  <section class="hero">
    <h1>Conecte projetos e freelancers</h1>
    <p>Publique projetos ou encontre trabalho. Simples e direto.</p>
    <% if (!user) { %>
      <a href="/cadastro" class="btn btn-large">Criar conta</a>
      <a href="/projetos" class="btn btn-outline">Ver projetos</a>
    <% } else { %>
      <a href="/projetos" class="btn btn-large">Ver projetos</a>
      <a href="/projetos/publicar" class="btn btn-outline">Publicar projeto</a>
    <% } %>
  </section>
  <% if (featuredProjects && featuredProjects.length) { %>
  <section class="section">
    <h2>Projetos em destaque</h2>
    <div class="card-grid">
      <% featuredProjects.forEach(function(p) { %>
      <a href="/projetos/<%= p.id %>" class="card">
        <h3><%= p.title %></h3>
        <p><%= (p.description || '').substring(0, 100) %>...</p>
        <span class="badge"><%= p.category %></span>
        <span class="budget">R$ <%= p.budget %></span>
      </a>
      <% }); %>
    </div>
    <p><a href="/projetos">Ver todos os projetos</a></p>
  </section>
  <% } %>
<%- include('partials/footer') %>
